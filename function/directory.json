const  fs  =  richiedi ( 'fs' ) ;
let  direct  =  JSON . parse ( fs . readFileSync ( './database/directory.json' ) ) ;

/**
* aggiungi img
* @param { stringa } valore
*/
const  addImage  =  ( valore )  =>  {
  testo  =  valore ;
  diretto . immagine . push ( testo ) ;
  fs . writeFileSync ( './database/directory.json' ,  JSON . stringify ( direct ,  null ,  '\t' ) ) ;
} ;

